<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/relativ"
    android:layout_height="match_parent"
    tools:context=".Activities.SendActivity">

    <ImageView
        android:id="@+id/PostImage"
        android:layout_width="284dp"
        android:layout_height="263dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="272dp"
        tools:srcCompact="@tools:sample/avatars" />


    <Button
        android:id="@+id/ButtonTakePic"
        android:layout_width="224dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:text="pran foto/kontinye"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="565dp"
        android:backgroundTint ="#F9A826"/>
    <TextView
        android:id="@+id/tvDocSend"
        android:layout_width="130dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="135dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_marginTop="210dp"
        android:text="@string/voye_dokima"
        android:gravity="top"
        />

    <ImageView
        android:id="@+id/send_id"
        android:layout_width="215dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/ic_send" />


</RelativeLayout>